rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /lists/{listId} {
      // Tilgang for eier og samarbeidspartnere
      allow read, write: if request.auth != null && (
        // Eier har alltid tilgang
        request.auth.uid == resource.data.ownerId ||
        
        // Delt liste: Bruker er i collaborators og listen er IKKE privat
        (resource.data.isPrivate != true && request.auth.token.email in resource.data.collaborators) ||
        
        // Spesialtilfelle for oppdatering av collaborators (forlat/fjern)
        (request.auth.token.email in resource.data.collaborators && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['collaborators', 'updatedAt']))
      );
      
      // Kun eier kan slette listen
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
      
      // Opprettelse
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }

    match /products/{productId} {
      // Global varekatalog - alle innloggede brukere kan lese og oppdatere
      allow read, write: if request.auth != null;
    }
  }
}
